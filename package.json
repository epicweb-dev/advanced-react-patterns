{
  "name": "advanced-react-patterns",
  "version": "1.0.0",
  "description": "The updated version of my advanced react component patterns course",
  "keywords": [],
  "homepage": "http://advanced-react-patterns.netlify.com/",
  "license": "GPL-3.0-only",
  "main": "src/index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=6",
    "yarn": ">=1"
  },
  "dependencies": {
    "@reach/auto-id": "^0.2.0",
    "@reach/router": "^1.2.1",
    "history": "^4.9.0",
    "jest-dom": "^3.2.2",
    "lodash": "^4.17.11",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^7.0.1",
    "redux": "^4.0.0",
    "stop-runaway-react-effects": "^1.2.0"
  },
  "devDependencies": {
    "cross-spawn": "^6.0.5",
    "eslint": "^5.16.0",
    "husky": "^2.3.0",
    "inquirer": "^6.3.1",
    "is-ci": "^2.0.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.17.1",
    "react-scripts": "^3.0.1",
    "replace-in-file": "^4.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "npm run test -- --watchAll=false --coverage",
    "test:exercises": "npm run test -- testing.*exercises\\/ --onlyChanged",
    "setup": "node ./scripts/setup && npm run validate && node ./scripts/autofill-feedback-email.js",
    "lint": "eslint .",
    "validate": "npm-run-all --parallel build test:coverage lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/exercises-final/**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
