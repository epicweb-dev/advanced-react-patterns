{
  "name": "advanced-react-patterns",
  "title": "Advanced React Patterns",
  "version": "1.0.0",
  "description": "Advanced React Component Patterns Course by Kent C. Dodds",
  "keywords": [],
  "homepage": "http://advanced-react-patterns.netlify.com/",
  "license": "GPL-3.0-only",
  "main": "src/index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=6",
    "yarn": ">=1"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.1",
    "dequal": "^1.0.0",
    "glob": "^7.1.6",
    "history": "^4.10.1",
    "lodash": "^4.17.15",
    "normalize.css": "^8.0.1",
    "preval.macro": "^4.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "stop-runaway-react-effects": "^1.2.1"
  },
  "devDependencies": {
    "cross-spawn": "^7.0.1",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "inquirer": "^7.0.4",
    "is-ci": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react-scripts": "^3.4.0",
    "replace-in-file": "^5.0.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "npm run test -- --watchAll=false --coverage",
    "test:exercises": "npm run test -- testing.*exercises\\/ --onlyChanged",
    "setup": "node ./scripts/setup && npm run validate && node ./scripts/autofill-feedback-email.js",
    "lint": "eslint .",
    "validate": "npm-run-all --parallel build test:coverage lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/exercises-final/**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
