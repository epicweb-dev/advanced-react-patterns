{
  "name": "advanced-react-patterns",
  "version": "1.0.0",
  "description": "The updated version of my advanced react component patterns course",
  "keywords": [],
  "homepage": "http://advanced-react-patterns.netlify.com/",
  "main": "src/index.js",
  "dependencies": {
    "@reach/router": "^1.2.1",
    "hoist-non-react-statics": "^3.3.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-testing-library": "^6.0.3",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "cross-spawn": "^6.0.5",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^1.3.1",
    "inquirer": "^6.0.0",
    "is-ci": "^2.0.0",
    "jest-dom": "^3.1.3",
    "node": "^8.11.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.16.4",
    "react-scripts": "^2.1.8",
    "replace-in-file": "^3.4.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "npm run test -- --coverage",
    "setup": "node ./scripts/verify && node ./scripts/install && npm run validate && node ./scripts/autofill-feedback-email.js",
    "validate": "npm-run-all --parallel build test:coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/exercises-final/**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
